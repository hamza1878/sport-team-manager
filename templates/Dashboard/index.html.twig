        <!-- Performance Analysis -->
        <div class="section-card">
            <div class="section-header">
                <h2 class="section-title">Analyses D√©taill√©es des Performances</h2>
                <div class="view-options">
                    <button class="view-btn active">Tout</button>
                    <button class="view-btn">Attaque</button>
                    <button class="view-btn">D√©fense</button>
                </div>
            </div>
            
            <div class="charts-grid">
                <!-- Chart 1: Buts -->
                <div class="chart-wrapper">
                    <h3 class="chart-title">
                        üéØ Contribution Offensive
                        <span class="chart-badge">BUTS</span>
                    </h3>
                    <div class="chart-container">
                        <canvas id="chart1"></canvas>
                    </div>
                </div>

                <!-- Chart 2: Notes -->
                <div class="chart-wrapper">
                    <h3 class="chart-title">
                        ‚≠ê √âvaluation de Performance
                        <span class="chart-badge">NOTES</span>
                    </h3>
                    <div class="chart-container">
                        <canvas id="chart2"></canvas>
                    </div>
                </div>

                <!-- Chart 3: Passes -->
                <div class="chart-wrapper">
                    <h3 class="chart-title">
                        üéÅ Distribution des Passes
                        <span class="chart-badge">ASSISTS</span>
                    </h3>
                    <div class="chart-container">
                        <canvas id="chart3"></canvas>
                    </div>
                </div>

                <!-- Chart 4: Minutes -->
                <div class="chart-wrapper">
                    <h3 class="chart-title">
                        ‚è±Ô∏è Utilisation de l'Effectif
                        <span class="chart-badge">MINUTES</span>
