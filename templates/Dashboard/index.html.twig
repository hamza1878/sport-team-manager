    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
document.addEventListener("DOMContentLoaded", async () => {

    console.log("üì° Manchester United - Chargement des donn√©es...");

    const response = await fetch('/api/stats');
    const data = await response.json();

    const joueurs = data.joueurs;
    const performances = data.performances;

    const joueursMap = {};
    joueurs.forEach(j => {
        joueursMap[j.id] = `${j.prenom} ${j.nom}`;
    });

    const analyseData = {
        joueurs: {},
        totalButs: 0,
        totalPasses: 0,
        totalCartons: 0
    };

    performances.forEach(perf => {
        const joueurNom = joueursMap[perf.joueurId] || `Joueur ${perf.joueurId}`;

        if (!analyseData.joueurs[joueurNom]) {
            analyseData.joueurs[joueurNom] = {
                buts: 0,
                passes: 0,
                minutes: 0,
                notes: [],
                cartonsJaunes: 0,
                cartonsRouges: 0
            };
        }

        const j = analyseData.joueurs[joueurNom];
        j.buts += perf.buts;
        j.passes += perf.passesDecisives;
        j.minutes += perf.minutesJouees;
        j.cartonsJaunes += perf.cartonJaune;
        j.cartonsRouges += perf.cartonRouge;

        if (perf.noteMatch > 0) {
            j.notes.push(perf.noteMatch);
        }

        analyseData.totalButs += perf.buts;
        analyseData.totalPasses += perf.passesDecisives;
        analyseData.totalCartons += perf.cartonJaune + perf.cartonRouge;
    });

    document.getElementById('totalButs').textContent = analyseData.totalButs;
    document.getElementById('totalCartons').textContent = analyseData.totalCartons;
    document.getElementById('totalJoueurs').textContent = joueurs.length;

    const joueursNoms = Object.keys(analyseData.joueurs);

    const muRed = '#DA291C';
    const muYellow = '#FBE122';
    const chartColors = ['#DA291C', '#FBE122', '#00B050', '#FF9500', '#666666'];

    Chart.defaults.color = '#A0A0A0';
    Chart.defaults.borderColor = '#1F1F1F';
    Chart.defaults.font.family = 'Inter';

    const commonOptions = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        }
    };

    // Chart 1: Buts
    new Chart(document.getElementById('chart1'), {
        type: 'bar',
        data: {
            labels: joueursNoms,
            datasets: [{
                label: 'Buts',
                data: joueursNoms.map(j => analyseData.joueurs[j].buts),
                backgroundColor: muRed,
                borderRadius: 6,
                borderSkipped: false
            }]
        },
        options: {
            ...commonOptions,
            indexAxis: 'y',
            scales: {
                x: {
                    grid: { color: '#1F1F1F' },
                    ticks: { color: '#A0A0A0' }
                },
                y: {
                    grid: { display: false },
                    ticks: { color: '#A0A0A0' }
                }
            }
        }
    });

    // Chart 2: Notes
    new Chart(document.getElementById('chart2'), {
        type: 'radar',
        data: {
            labels: joueursNoms,
            datasets: [{
                label: 'Note Moyenne',
                data: joueursNoms.map(j => {
                    const notes = analyseData.joueurs[j].notes;
                    return notes.length ? (notes.reduce((a,b)=>a+b) / notes.length) : 0;
                }),
                backgroundColor: 'rgba(218, 41, 28, 0.2)',
                borderColor: muRed,
                borderWidth: 3,
                pointBackgroundColor: muRed,
                pointBorderColor: '#fff',
                pointRadius: 5
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                r: {
                    beginAtZero: true,
                    grid: { color: '#1F1F1F' },
                    ticks: { color: '#A0A0A0', backdropColor: 'transparent' },
                    pointLabels: { color: '#A0A0A0', font: { size: 12 } }
                }
            }
        }
    });

    // Chart 3: Passes
    new Chart(document.getElementById('chart3'), {
        type: 'doughnut',
        data: {
            labels: joueursNoms,
            datasets: [{
                data: joueursNoms.map(j => analyseData.joueurs[j].passes),
                backgroundColor: chartColors,
                borderWidth: 3,
                borderColor: '#141414'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'right',
                    labels: { color: '#A0A0A0', padding: 15, font: { size: 11 } }
                }
            }
        }
    });

    // Chart 4: Minutes
    new Chart(document.getElementById('chart4'), {
        type: 'bar',
        data: {
            labels: joueursNoms,
            datasets: [{
                label: 'Minutes',
                data: joueursNoms.map(j => analyseData.joueurs[j].minutes),
                backgroundColor: muYellow,
                borderRadius: 6,
                borderSkipped: false
            }]
        },
        options: {
            ...commonOptions,
            scales: {
                x: {
                    grid: { color: '#1F1F1F' },
                    ticks: { color: '#A0A0A0' }
                },
                y: {
                    grid: { color: '#1F1F1F' },
                    ticks: { color: '#A0A0A0' }
                }
            }
        }
    });

    // Chart 5: Cartons
    new Chart(document.getElementById('chart5'), {
        type: 'bar',
        data: {
            labels: joueursNoms,
            datasets: [
                {
                    label: 'Cartons Jaunes',
                    data: joueursNoms.map(j => analyseData.joueurs[j].cartonsJaunes),
                    backgroundColor: '#FBE122',
                    borderRadius: 6,
                    borderSkipped: false
                },
                {
                    label: 'Cartons Rouges',
                    data: joueursNoms.map(j => analyseData.joueurs[j].cartonsRouges),
                    backgroundColor: '#DA291C',
                    borderRadius: 6,
                    borderSkipped: false
                }
            ]
        },
        options: {
            ...commonOptions,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                    labels: { color: '#A0A0A0', padding: 15 }
                }
            },
            scales: {
                x: {
                    stacked: false,
                    grid: { color: '#1F1F1F' },
                    ticks: { color: '#A0A0A0' }
                },
                y: {
                    stacked: false,
                    grid: { color: '#1F1F1F' },
                    ticks: { color: '#A0A0A0' }
                }
            }
        }
    });

    // Chart 6: Performance Globale
    new Chart(document.getElementById('chart6'), {
        type: 'polarArea',
        data: {
            labels: joueursNoms,
            datasets: [{
                data: joueursNoms.map(j => {
                    const d = analyseData.joueurs[j];
                    const noteMoy = d.notes.length ? d.notes.reduce((a,b)=>a+b) / d.notes.length : 0;
                    return d.buts*3 + d.passes*2 + noteMoy;
                }),
                backgroundColor: chartColors.map(c => c + '99'),
                borderColor: chartColors,
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'right',
                    labels: { color: '#A0A0A0', padding: 15 }
                }
            },
            scales: {
                r: {
                    grid: { color: '#1F1F1F' },
                    ticks: { color: '#A0A0A0', backdropColor: 'transparent' }
                }
            }
        }
    });

});
    </script>
