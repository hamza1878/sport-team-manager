{% extends 'base.html.twig' %}

{% block title %}Matchs{% endblock %}

{% block body %}
    <h1>Matchs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>DateMatch</th>
                <td>{{ match.dateMatch ? match.dateMatch|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ match.heure ? match.heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Stade</th>
                <td>{{ match.stade }}</td>
            </tr>
            <tr>
                <th>ScoreDomicile</th>
                <td>{{ match.scoreDomicile }}</td>
            </tr>
            <tr>
                <th>ScoreExterieur</th>
                <td>{{ match.scoreExterieur }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matchs_index') }}">back to list</a>

    <a href="{{ path('app_matchs_edit', {'id': match.id}) }}">edit</a>

    {{ include('matchs/_delete_form.html.twig') }}
{% endblock %}
